<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="serval">

  <!-- Leg macro -->
  <xacro:macro name="leg" params="legPos x_sign y_sign">
    <!-- Hip joint and link -->
    <joint name="hip_${legPos}" type="revolute">
      <origin xyz="${0.1335 * x_sign} ${0.060 * y_sign} 0.0" rpy="${1.5707963 * y_sign - 1.5707963} ${1.5707963 * x_sign - 1.5707963} 0"/>
      <parent link="base_link" />
      <child link="hip_${legPos}" />
      <axis xyz="1 0 0" />
      <limit lower="-1.5707963" upper="1.5707963" effort="1.0" velocity="1.0" />
    </joint>  
 
    <link name="hip_${legPos}">
      <visual>
        <geometry>
          <mesh filename="package://serval/meshes/hip_link.stl" />
        </geometry>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://serval/meshes/hip_link.stl" />
        </geometry>
      </collision>
    </link>

    <!-- Upper leg joint and link -->

    <joint name="upper_leg_${legPos}" type="revolute">
      <origin xyz="0.0465 0.008 0.0" rpy="${1.5707963 * x_sign - 1.5707963} ${1.5707963 * y_sign - 1.5707963} ${1.5707963 * x_sign + 1.5707963}"/>
      <parent link="hip_${legPos}" />
      <child link="upper_leg_${legPos}" />
      <axis xyz="0 -1 0" />
      <limit lower="-1.5707963" upper="1.5707963" effort="1.0" velocity="1.0" />
    </joint>  
 
    <link name="upper_leg_${legPos}">
      <visual>
        <geometry>
          <mesh filename="package://serval/meshes/upper_leg_link.stl" />
        </geometry>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://serval/meshes/upper_leg_link.stl" />
        </geometry>
      </collision>
    </link> 

    <!-- Lower leg joint and link -->
    <joint name="lower_leg_${legPos}" type="revolute">
      <origin xyz="0 -0.0565 -0.180" rpy="0 0 0"/>
      <parent link="upper_leg_${legPos}"/>
      <child link="lower_leg_${legPos}"/>
      <axis xyz="0 ${1 * y_sign} 0"/>    
      <limit lower="-1.5707963" upper="1.5707963" effort="1.0" velocity="1.0"/>
    </joint>

    <link name="lower_leg_${legPos}">
      <visual>
        <geometry>
          <mesh filename="package://serval/meshes/lower_leg_link.stl"/>
        </geometry>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://serval/meshes/lower_leg_link.stl"/>
        </geometry>
      </collision>
    </link>

  </xacro:macro>
  
  <link name="world" />

  <joint name="base_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="world" />
    <child link="base_link" />
  </joint>

  <link name="base_link">
    <visual>
      <geometry>
        <mesh filename="package://serval/meshes/base_link.stl" />
      </geometry>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://serval/meshes/base_link.stl" />
      </geometry>
    </collision>
  </link>

  <!-- Create legs at 4 positions: FR, FL, BR, BL -->
  <!-- Front Right -->
  <xacro:leg legPos="fr" x_sign="1" y_sign="1"/>
  
  <!-- Front Left -->
  <xacro:leg legPos="fl" x_sign="1" y_sign="-1"/>
  
  <!-- Back Right -->
  <xacro:leg legPos="br" x_sign="-1" y_sign="1"/>
  
  <!-- Back Left -->
  <xacro:leg legPos="bl" x_sign="-1" y_sign="-1"/>

  <ros2_control name="RobotSystem" type="system">
    <hardware>
      <plugin>mock_components/GenericSystem</plugin>
    </hardware>
    <!-- Front Right Leg -->
    <joint name="hip_fr">
      <command_interface name="position" />
      <state_interface name="position" />
    </joint>
    <joint name="upper_leg_fr">
      <command_interface name="position" />
      <state_interface name="position" />
    </joint>
    <joint name="lower_leg_fr">
      <command_interface name="position" />
      <state_interface name="position" />
    </joint>
    <!-- Front Left Leg -->
    <joint name="hip_fl">
      <command_interface name="position" />
      <state_interface name="position" />
    </joint>
    <joint name="upper_leg_fl">
      <command_interface name="position" />
      <state_interface name="position" />
    </joint>
    <joint name="lower_leg_fl">
      <command_interface name="position" />
      <state_interface name="position" />
    </joint>
    <!-- Back Right Leg -->
    <joint name="hip_br">
      <command_interface name="position" />
      <state_interface name="position" />
    </joint>
    <joint name="upper_leg_br">
      <command_interface name="position" />
      <state_interface name="position" />
    </joint>
    <joint name="lower_leg_br">
      <command_interface name="position" />
      <state_interface name="position" />
    </joint>
    <!-- Back Left Leg -->
    <joint name="hip_bl">
      <command_interface name="position" />
      <state_interface name="position" />
    </joint>
    <joint name="upper_leg_bl">
      <command_interface name="position" />
      <state_interface name="position" />
    </joint>
    <joint name="lower_leg_bl">
      <command_interface name="position" />
      <state_interface name="position" />
    </joint>
  </ros2_control>

</robot>